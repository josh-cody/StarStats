<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.starstats" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/star_icon_background"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/star_icon_background"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:usesCleartextTraffic="true" >
        <receiver
            android:name=".BrawlerWidget"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/brawler_widget_info" />
        </receiver>

        <activity
            android:name=".AllBrawlers"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Maps"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProfilePage"
            android:exported="false"
            android:label="@string/title_activity_profile_page"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".BackgroundSoundService" />
    </application>

</manifest>