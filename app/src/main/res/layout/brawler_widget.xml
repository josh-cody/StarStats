<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/app_widget_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:radius="15dp">

            <ImageView
                android:id="@+id/brawlerImageWidget"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/shelly"
                tools:ignore="InefficientWeight" />
        </LinearLayout>

        <TextView
            android:id="@+id/playerNameWidget"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:textColor="#a9a9a9"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/only_one_widget_is_allowed"
            android:fontFamily="@font/nougat_extrablack"
            app:autoSizeMaxTextSize="140sp"
            app:autoSizeMinTextSize="16sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/brawlerTrophiesWidget"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/nougat_extrablack"
            android:gravity="center"
            android:textColor="@color/yellow"
            android:textSize="28sp" />

    </LinearLayout>
</LinearLayout>