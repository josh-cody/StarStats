<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BrawlerDescriptionFragment"
    android:background="#8000"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/rounded_fragment_brawler"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/brawlerPortraitDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/closeDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_menu_close_clear_cancel" />

                <TextView
                    android:id="@+id/brawlerName"
                    android:layout_width="match_parent"
                    android:layout_height="71dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:fontFamily="@font/nougat_extrablack"
                    android:gravity="center"
                    android:lines="1"
                    android:padding="3dp"
                    android:text="TextView"
                    android:textColor="@color/white"
                    app:autoSizeMaxTextSize="140sp"
                    app:autoSizeMinTextSize="16sp"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform" />

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:id="@+id/divider7"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp">

                        <LinearLayout
                            android:id="@+id/linID"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:padding="3dp"
                            app:layout_constraintBottom_toTopOf="@id/linearLayout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="277dp"
                                android:layout_height="40dp"
                                android:fontFamily="@font/nougat_extrablack"
                                android:gravity="start"

                                android:text="STAR POWERS"
                                android:textColor="@color/yellow"
                                app:autoSizeMaxTextSize="50sp"
                                app:autoSizeMinTextSize="16sp"
                                app:autoSizeStepGranularity="1sp"
                                app:autoSizeTextType="uniform" />

                            <ImageButton
                                android:id="@+id/starpowerDropdown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:src="@drawable/ic_baseline_expand_more_24" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linID">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/starpower1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/textview_rounded_top"
                                    android:fontFamily="@font/nougat_extrablack"
                                    android:gravity="start"
                                    android:padding="3dp"
                                    android:paddingStart="4dp"
                                    android:paddingEnd="4dp"
                                    android:text="TextView"
                                    android:textColor="@color/yellow"
                                    android:textSize="20dp" />

                                <TextView
                                    android:id="@+id/starpower1desc"
                                    android:layout_width="match_parent"
                                    android:layout_height="75dp"
                                    android:background="@drawable/textview_rounded_bottom"
                                    android:fontFamily="@font/nougat_extrablack"
                                    android:gravity="start"
                                    android:padding="3dp"
                                    android:paddingStart="4dp"
                                    android:paddingEnd="4dp"
                                    android:textColor="@color/white"
                                    app:autoSizeMaxTextSize="50sp"
                                    app:autoSizeMinTextSize="16sp"
                                    app:autoSizeStepGranularity="1sp"
                                    app:autoSizeTextType="uniform" />

                                <View
                                    android:id="@+id/divider"
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp" />

                                <TextView
                                    android:id="@+id/starpower2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/textview_rounded_top"
                                    android:fontFamily="@font/nougat_extrablack"
                                    android:gravity="start"
                                    android:padding="3dp"
                                    android:paddingStart="4dp"
                                    android:paddingEnd="4dp"
                                    android:textColor="@color/yellow"
                                    android:textSize="20dp" />

                                <TextView
                                    android:id="@+id/starpower2desc"
                                    android:layout_width="match_parent"
                                    android:layout_height="75dp"
                                    android:background="@drawable/textview_rounded_bottom"
                                    android:fontFamily="@font/nougat_extrablack"
                                    android:gravity="start"
                                    android:padding="3dp"
                                    android:paddingStart="4dp"
                                    android:paddingEnd="4dp"
                                    android:textColor="@color/white"
                                    app:autoSizeMaxTextSize="50sp"
                                    app:autoSizeMinTextSize="16sp"
                                    app:autoSizeStepGranularity="1sp"
                                    app:autoSizeTextType="uniform" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <View
                    android:id="@+id/divider5"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"

                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"

                        >

                        <LinearLayout
                            android:id="@+id/linID2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toTopOf="@id/linearLayout2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="277dp"
                                android:layout_height="40dp"
                                android:fontFamily="@font/nougat_extrablack"
                                android:gravity="start"
                                android:text="GADGETS"
                                android:textColor="@color/green"
                                app:autoSizeMaxTextSize="50sp"
                                app:autoSizeMinTextSize="16sp"
                                app:autoSizeStepGranularity="1sp"
                                app:autoSizeTextType="uniform" />
                            <ImageButton
                                android:id="@+id/gadgetDropdown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:src="@drawable/ic_baseline_expand_more_24"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@+id/linID2"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:padding="4dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                >

                                <TextView
                                    android:id="@+id/gadget1"
                                    android:fontFamily="@font/nougat_extrablack"
                                    android:textSize="20dp"
                                    android:textColor="@color/green"
                                    android:gravity="start"
                                    android:padding="3dp"
                                    android:background="@drawable/textview_rounded_top"
                                    android:layout_width="match_parent"
                                    android:text="TextView"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/gadget1desc"
                                    android:layout_width="match_parent"
                                    android:layout_height="75dp"
                                    android:background="@drawable/textview_rounded_bottom"
                                    android:fontFamily="@font/nougat_extrablack"
                                    android:gravity="start"
                                    android:padding="3dp"
                                    android:textColor="@color/white"
                                    app:autoSizeMaxTextSize="50sp"
                                    app:autoSizeMinTextSize="16sp"
                                    app:autoSizeStepGranularity="1sp"
                                    app:autoSizeTextType="uniform" />

                                <View
                                    android:id="@+id/divider8"
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp"
                                    />

                                <TextView
                                    android:id="@+id/gadget2"
                                    android:fontFamily="@font/nougat_extrablack"
                                    android:textSize="20dp"
                                    android:textColor="@color/green"
                                    android:layout_width="match_parent"
                                    android:gravity="start"
                                    android:padding="3dp"
                                    android:background="@drawable/textview_rounded_top"
                                    android:text="TextView"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/gadget2desc"
                                    android:layout_width="match_parent"
                                    android:layout_height="75dp"
                                    android:fontFamily="@font/nougat_extrablack"
                                    android:gravity="start"
                                    android:background="@drawable/textview_rounded_bottom"
                                    android:textColor="@color/white"
                                    app:autoSizeMaxTextSize="50sp"
                                    android:padding="3dp"
                                    app:autoSizeMinTextSize="16sp"
                                    app:autoSizeStepGranularity="1sp"
                                    app:autoSizeTextType="uniform" />

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/divider6"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    />

                <TextView
                    android:id="@+id/description"
                    android:fontFamily="@font/nougat_extrablack"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="4dp"
                    android:layout_margin="4dp"
                    app:autoSizeMaxTextSize="150sp"
                    app:autoSizeMinTextSize="16sp"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform"
                    android:background="@drawable/desc_background" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>