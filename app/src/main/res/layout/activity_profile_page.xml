<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/brawlersCon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ProfilePage">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/name_back"
        android:fontFamily="@font/nougat_extrablack"
        android:gravity="center"
        android:text="TextView"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/personalStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        android:background="@drawable/roundedco"
        app:layout_constraintBottom_toTopOf="@+id/brawlersScroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name">

        <TextView
            android:id="@+id/highestTrophies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nougat_extrablack"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@android:color/secondary_text_dark_nodisable"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/currentTrophies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bsfont"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@android:color/secondary_text_dark_nodisable"
            android:textSize="24sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/brawlersScroll"
        android:layout_width="match_parent"
        android:layout_height="522dp"
        android:layout_margin="8dp"
        android:background="@drawable/roundedco"
        android:clipToPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_weight=".65">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="7dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:orientation="vertical" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>