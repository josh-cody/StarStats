<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_fragment"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <Switch
            android:id="@+id/musicSetting"
            android:fontFamily="@font/nougat_extrablack"
            android:layout_width="match_parent"
            android:textColor="@color/yellow"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:text="@string/music"
            tools:ignore="SpUsage,UseSwitchCompatOrMaterialXml" />

        <EditText
            android:id="@+id/playerTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/tag_widget"
            android:fontFamily="@font/nougat_extrablack"
            android:inputType="textPersonName"
            android:textColor="@color/yellow"
            android:textIsSelectable="false"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/brawlerToTrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/nougat_extrablack"
            android:hint="@string/brawler_widget"
            android:inputType="textPersonName"
            android:textColor="@color/yellow"
            android:textIsSelectable="false"
            android:importantForAutofill="no" />
    </LinearLayout>

</FrameLayout>