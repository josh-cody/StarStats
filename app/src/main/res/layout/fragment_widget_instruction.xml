<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/instBack"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/instr_back"
    android:layout_margin="15dp"
    tools:context=".WidgetInstructionFragment">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/widget"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="5dp"
        android:fontFamily="@font/nougat_extrablack"
        app:autoSizeMaxTextSize="140sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:fontFamily="@font/nougat_extrablack"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/widget_instructions"
        android:textColor="@color/white"
        app:autoSizeMaxTextSize="140sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tap_to_close"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:fontFamily="@font/nougat_extrablack"

        />
</LinearLayout>